<Page x:Class="CovidPropagation.PageSimulation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:CovidPropagation"
    mc:Ignorable="d" 
    d:DesignHeight="1000" d:DesignWidth="800"
    Title="PageSimulation">
    <ScrollViewer>
      <Grid ScrollViewer.CanContentScroll="True" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" MinWidth="50" />
            <ColumnDefinition Width="25*" MinWidth="50" />
            <ColumnDefinition Width="25*" MinWidth="80" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--<Label Grid.Column="2" Grid.Row="1" 
               x:Name="lblDatas">
            Datas
        </Label>-->
        
        <Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="4"
                >Interface Graphique</Button>

        <Button Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="2"
                >Graph1</Button>

        <Button Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="2"
                >Graph2</Button>

        <Button Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="2"
                >Graph3</Button>

        <Button Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="2"
                >Graph4</Button>

        <Button Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="1" Grid.RowSpan="2"
            >Graph3</Button>

        <Button Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="1" Grid.RowSpan="2"
            >Graph4</Button>

        <Grid Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" MinWidth="50" />
                <ColumnDefinition Width="50*" MinWidth="50" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <Slider Template="{StaticResource HorizontalSlider}" 
                x:Name="intervalSlider" 
                Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                Minimum="0" Maximum="1000"
                IsSelectionRangeEnabled="True"
                Thumb.DragCompleted="IntervalSlider_DragCompleted">
            </Slider>

            <Button Click="Start_Click" Style="{StaticResource smallButton}" 
                x:Name="btnStart" 
                Grid.Column="0" Grid.Row="1"
                Content="Start"/>

            <Button Click="Stop_Click" Style="{StaticResource smallButton}"
                x:Name="btnStop" 
                Grid.Column="1" Grid.Row="1"
                Content="Stop"
                Height="auto"/>
        </Grid>

            <!--
        <Button Click="OpenLegendWindow_Click" Style="{StaticResource smallButton}" 
              Grid.Column="2" Grid.Row="5"
              Content="Légende"/>
        -->
      </Grid>
    </ScrollViewer>
</Page>
