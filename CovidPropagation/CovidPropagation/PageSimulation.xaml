<Page x:Class="CovidPropagation.PageSimulation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:CovidPropagation"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Title="PageSimulation">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="2" Grid.Row="1" 
               x:Name="lblDatas">
            Datas
        </Label>

        <Slider Template="{StaticResource HorizontalSlider}" 
                x:Name="intervalSlider" 
                Grid.Column="0" Grid.Row="1" 
                Minimum="0" Maximum="1000" Margin="28,38,72,52"
                IsSelectionRangeEnabled="True"
                Thumb.DragCompleted="intervalSlider_DragCompleted">
        </Slider>

        <Button Click="Start_Click" Style="{StaticResource button}" 
                x:Name="btnStart" 
                Grid.Column="0" Grid.Row="0"
                Margin="99,52,150,103"
                Content="Start" Grid.RowSpan="2"/>

        <Button Click="Stop_Click" Style="{StaticResource button}"
                x:Name="btnStop" 
                Grid.Column="0" Grid.Row="0"
                Margin="255,52,0,103"
                Content="Stop" Grid.RowSpan="2"/>

        <Button Click="OpenLegendWindow_Click" Style="{StaticResource smallButton}" 
                Grid.Column="2" Grid.Row="4" 
                Height="30" Width="100"
                Content="Légende"/>
    </Grid>
</Page>
