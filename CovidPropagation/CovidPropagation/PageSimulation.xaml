<Page x:Class="CovidPropagation.PageSimulation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:CovidPropagation"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Title="PageSimulation">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Slider Template="{StaticResource HorizontalSlider}" x:Name="mySlider" Grid.Column="0" Value="6" Grid.Row="1" Minimum="0" Maximum="100" Margin="50,0,50,90" 
                IsSelectionRangeEnabled="True">
        </Slider>
        
        <StackPanel Margin="10" Grid.Column="1">
            <Label Foreground="{StaticResource foreGroundLight}" FontWeight="Bold">Never gonna</Label>
            <RadioButton Foreground="{StaticResource foreGroundLight}">Give</RadioButton>
            <RadioButton IsEnabled="False" Foreground="{StaticResource foreGroundLight}">You</RadioButton>
            <RadioButton Foreground="{StaticResource foreGroundLight}" IsChecked="True">Up</RadioButton>
        </StackPanel>
        
        <StackPanel Margin="10" Grid.Column="1" Grid.Row="1">
            <Label Foreground="{StaticResource foreGroundLight}" FontWeight="Bold">Never gonna</Label>
            <CheckBox IsEnabled="False"  Foreground="{StaticResource foreGroundLight}">Let</CheckBox>
            <CheckBox Foreground="{StaticResource foreGroundLight}" IsChecked="True">You</CheckBox>
            <CheckBox Foreground="{StaticResource foreGroundLight}">Down</CheckBox>
        </StackPanel>
        <Button Style="{StaticResource button}" Grid.Column="0" Grid.Row="1" Content="Okay1" Height="50" Width="200" Grid.ColumnSpan="2"/>
        <Button Style="{StaticResource button}" Grid.Column="0" Grid.Row="2" Content="Okay1"  Height="50" Width="200"/>
        <Button Click="OpenLegendWindow_Click" Style="{StaticResource smallButton}" Grid.Column="2" Grid.Row="4" Content="Légende"  Height="30" Width="100"/>
    </Grid>
</Page>
