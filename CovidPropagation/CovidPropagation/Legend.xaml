<Window x:Class="CovidPropagation.Legend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CovidPropagation"
        mc:Ignorable="d"
        Title="Legend" Height="450" Width="273"
        Background="#1a1a1a"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" MaxHeight="25" MinHeight="25"/>
            <RowDefinition Height="95*" MaxHeight="150" MinHeight="50"/>
        </Grid.RowDefinitions>
        <ContentPresenter Grid.ColumnSpan="3" Content="{Binding}" ContentTemplate="{StaticResource TitleBar}"/>
    </Grid>
</Window>
